<tal:block xmlns:ex="http://simile.mit.edu/2006/11/exhibit#">

    <tal:facet define="
      name python:view.gett('name', '');
      label python:view.gett('label', '');">

    <div ex:role="facet" tal:attributes="
      ex:expression string:.$name;
      ex:facetLabel string:$label;"
      tal:condition="name"
    ></div>

    </tal:facet>

</tal:block>